{
  "$schema": "https://claude.ai/settings-schema.json",
  "hooks": {
    "PreToolCall": [
      {
        "matcher": {
          "toolNames": ["Edit", "Write", "Bash"]
        },
        "command": ".claude/hooks/orchestrator-reminder.sh"
      },
      {
        "matcher": {
          "toolNames": ["Edit", "Write", "NotebookEdit"]
        },
        "command": ".claude/hooks/block-orchestrator-tools.sh"
      },
      {
        "matcher": {
          "toolNames": ["Task"]
        },
        "command": ".claude/hooks/validate-task-dispatch.sh"
      },
      {
        "matcher": {
          "toolNames": ["Task"]
        },
        "command": ".claude/hooks/append-supervisor-instructions.sh"
      }
    ],
    "PostToolCall": [
      {
        "matcher": {
          "toolNames": ["Task"]
        },
        "command": ".claude/hooks/validate-supervisor-completion.sh"
      }
    ]
  },
  "agents": {
    "directory": ".claude/agents"
  },
  "project": {
    "name": "comfyui-ltx2",
    "kanbanProjectId": "2c212ae1-ca5c-4402-9e2e-838fca47b67b"
  }
}
